{
    "name": "Our first chrome extension",
    "version": "1.0",
    "description": "Getting selected text of web pages and store them on the chrome's storage",
    "manifest_version": 2,
    "author": "Haniyeh Asemi",
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "js/get-selection.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "permissions": [
        "storage"
    ]
}